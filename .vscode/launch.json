{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug 'npm run dev'",
      "protocol": "inspector",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "pwa-node",
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "request": "launch",
      "name": "Mocha All (transpiled)",
      "args": ["--timeout", "999999", "--colors", "${workspaceFolder}/src/**/*.test.ts"],
      "env": {
        "NODE_ENV": "test"
      },
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-mocha",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    }
  ]
}
