{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to current script",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Debug npm run dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"],
      "cwd": "${workspaceRoot}",
      "envFile": ".env",
      "console": "integratedTerminal"
    },
    {
      "name": "Mocha all",
      "type": "node",
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/ts-mocha",
      "args": ["src/**/*.test.ts", "--timeout", "999999", "--exit"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Mocha Current File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/ts-mocha",
      "args": ["${file}", "--timeout", "999999", "--exit"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Mocha dist all",
      "type": "node",
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "args": ["${workspaceFolder}/dist/**/*.test.js", "--timeout", "999999", "--exit"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
