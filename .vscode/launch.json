{
  "version": "0.2.0",
  "configurations": [
    {
      "command": ". ${workspaceFolder}/.env.sample && npm run tasks:otomi:compile-schema",
      "name": "Run schema-compile task",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": ". ${workspaceFolder}/.env.sample && npm run tasks:otomi:validate-values",
      "name": "Run validate-values task",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": ". ${workspaceFolder}/.env.sample && ((npm run tasks:otomi:compile-schema && npm run tasks:otomi:validate-values) && echo Success) || echo Failed",
      "name": "E2e validate task",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/${relativeFile}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to dev:debug",
      "protocol": "inspector",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "dotenv/config",
        "--require",
        "ts-node/register",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "--recursive",
        "${workspaceFolder}/src/**/*.ts"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "dotenv/config",
        "--require",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "--recursive",
        "${file}"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
