  "engines": {
    "node": ">=24 <25"
  },
  "engineStrict": true,
  "homepage": "https://github.com/redkubes/otomi-api#readme",
  "license": "ISC",
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "main": "dist/src/app.js",
  "name": "@redkubes/otomi-api",
  "publishConfig": {
    "private": true,
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redkubes/otomi-api.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:models && tsc && tsc-alias --dir dist -v && copyup --error src/generated-schema.json src/values-schema.yaml src/ttyManifests/*.yaml src/ttyManifests/adminTtyManifests/*.yaml dist/src && copyup --error ./src/license/license.pem ./dist/src",
    "build:models": "npm run build:spec && openapi-typescript src/generated-schema.json -o src/generated-schema.ts --default-non-nullable false",
    "build:spec": "tsx src/build-spec.ts",
    "clean": "rm -rf dist >/dev/null",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "dev": "run-p watch dev:node",
    "dev:node": "tsx watch --env-file=.env --inspect=4321 src/app.ts",
    "lint": "run-p types lint:ts",
    "lint:ts": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix .",
    "lint-staged": "lint-staged",
    "postinstall": "npm run build:models",
    "pre-release:client": "npm version prerelease --preid rc --no-commit-hooks --no-git-tag-version && bin/release-client.sh",
    "release": "standard-version",
    "release:bump:minor": "standard-version --skip.changelog true --release-as minor",
    "release:client": "bin/release-client.sh",
    "start": "node dist/src/app.js",
    "test": "npm run build:models && jest",
    "test:pattern": "npm run build:models && jest --forceExit",
    "types": "tsc --noEmit",
    "prepare": "husky install",
    "watch": "npm-watch",
    "license:sign": "tsx src/license.ts"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "version": "4.13.0",
  "watch": {
    "build:models": {
      "patterns": [
        "src/openapi"
      ],
      "extensions": "yaml",
      "runOnChangeOnly": true
    }
  }
}
