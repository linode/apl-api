    "clean-deep": "^3.4.0",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "envalid": "^6.0.2",
    "eslint-config-airbnb-base": "^14.2.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-openapi": "^9.3.1",
    "js-yaml": "^4.1.0",
    "jwt-decode": "^2.2.0",
    "lightship": "^6.7.2",
    "lodash": "^4.17.21",
    "lowdb": "^1.0.0",
    "morgan": "^1.10.0",
    "password-generator": "^2.3.2",
    "pubsub-ws": "^1.0.3",
    "shelljs": "^0.8.5",
    "simple-git": "^3.0.0",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "swagger-client": "^3.13.2",
    "swagger-ui-express": "^4.1.6",
    "ts-custom-error": "^3.2.0",
    "ts-mocha": "^9.0.0",
    "uuid": "^8.3.2"
  },
  "description": "The brain of the Otomi Container Platform. Handling console input and talking to core, it knows what to do.",
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@commitlint/config-conventional": "16.2.4",
    "@hkdobrev/run-if-changed": "0.3.1",
    "@redocly/openapi-cli": "1.0.0-beta.95",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/express": "4.17.13",
    "@types/lodash": "4.14.182",
    "@types/lowdb": "1.0.11",
    "@types/mocha": "7.0.2",
    "@types/node": "16.11.36",
    "@types/sinon": "10.0.11",
    "@types/sinon-chai": "3.2.8",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "commitizen": "4.2.4",
    "copyfiles": "2.4.1",
    "cspell": "5.21.2",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.0.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-chai-expect": "2.2.0",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "3.4.1",
    "git-branch-is": "4.0.0",
    "git-cz": "4.9.0",
    "husky": "7.0.4",
    "jsonwebtoken": "8.5.1",
    "lint-staged": "10.5.4",
    "mocha": "9.2.2",
    "nock": "13.2.4",
    "nodemon": "2.0.16",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.11.0",
    "openapi-schema-validator": "3.0.3",
    "openapi-typescript": "5.3.0",
    "prettier": "2.6.2",
    "sinon": "8.1.1",
    "sinon-chai": "3.7.0",
    "standard-version": "9.5.0",
    "supertest": "4.0.2",
    "supports-color": "9.2.2",
    "swagger-node-codegen": "1.6.3",
    "ts-node": "8.10.2",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.4",
    "watch": "0.19.2",
    "yaml-prune": "1.0.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "engineStrict": true,
  "homepage": "https://github.com/redkubes/otomi-api#readme",
  "license": "ISC",
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "main": "dist/app.js",
  "name": "@redkubes/otomi-api",
  "publishConfig": {
    "private": true,
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redkubes/otomi-api.git"
  },
  "run-if-changed": {
    "package-lock.json": "npm install --prefer-offline --no-audit",
    "src/openapi/**/*": "npm run build:models"
  },
  "scripts": {
    "build": "npm run build:models && tsc && copyup --error src/generated-schema.json src/values-schema.yaml dist/",
    "build:models": "npm run build:spec && openapi-typescript src/generated-schema.json -o src/generated-schema.ts",
    "build:spec": "ts-node-dev src/build-spec.ts",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "dev": "run-p watch dev:node",
    "dev:node": "ts-node-dev --watch 'test/apps.yaml,test/core.yaml,src/openapi/**/*.yaml,src/generated-schema.ts,.env' --inspect=4321 --respawn --transpile-only -r dotenv/config src/app.ts",
    "lint": "run-p types lint:ts",
    "lint:ts": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix .",
    "lint-staged": "lint-staged",
    "postinstall": "npm run build:models",
    "pre-release:client": "npm version prerelease --preid rc --no-commit-hooks --no-git-tag-version && bin/release-client.sh",
    "release": "standard-version",
    "release:client": "bin/release-client.sh",
    "run-if-changed": "run-if-changed",
    "start": "node dist/src/app.js",
    "test": "GIT_LOCAL_PATH=./test npm run build:models && TS_NODE_TRANSPILE_ONLY=true NODE_ENV=test mocha --timeout 25000 -r ts-node/register -r ts-custom-error src/*.test.* --exit",
    "types": "tsc --noEmit",
    "prepare": "husky install",
    "watch": "npm-watch"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "version": "0.5.15",
  "watch": {
    "build:models": {
      "patterns": [
        "src/openapi"
      ],
      "extensions": "yaml",
      "runOnChangeOnly": true
    }
  }
}
