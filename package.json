    "clean-deep": "^3.4.0",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "deep-diff": "^1.0.2",
    "envalid": "^7.3.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-openapi": "^9.3.1",
    "fs-extra": "^10.1.0",
    "generate-password": "^1.7.1",
