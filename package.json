{
  "name": "otomi-stack-api",
  "version": "1.0.0",
  "description": "REST API for admins and teams",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon -e js,yaml,yml app.js",
    "lint": "eslint .",
    "test": "mocha src --exit",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "format": "prettier --check \"**/*.{js,json,md,ts,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{js,json,md,ts,yml,yaml}\"",
    "husky:lint-staged": "lint-staged",
    "husky:pre-commit": "lint-staged",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run husky:pre-commit",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "postmerge": "./bin/post-merge-hook.sh"
    }
  },
  "lint-staged": {
    "*.{jts}": [
      "tslint --project ./tsconfig.tslint.json",
      "git add"
    ],
    "*.{js}": [
      "eslint --project ./eslintrc.yml",
      "git add"
    ],
    "*.{js,json,md,ts,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redkubes/otomi-stack-api.git"
  },
  "author": "RedKubes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/redkubes/otomi-stack-api/issues"
  },
  "homepage": "https://github.com/redkubes/otomi-stack-api#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi": "^6.0.0",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "morgan": "^1.9.1",
    "openapi-client-axios": "^3.3.2",
    "password-generator": "^2.2.3",
    "react-icons": "^3.9.0",
    "shelljs": "^0.8.3",
    "simple-git": "^1.129.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "sinon": "^8.0.4",
    "standard-version": "^7.1.0",
    "supertest": "^4.0.2"
  }
}
