    "jwt-decode": "^2.2.0",
    "lightship": "^6.7.2",
    "lodash": "^4.17.21",
    "lowdb": "^1.0.0",
    "morgan": "^1.10.0",
    "shelljs": "^0.8.5",
    "simple-git": "^3.16.0",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "swagger-client": "^3.32.1",
    "swagger-ui-express": "^4.1.6",
    "ts-custom-error": "^3.2.0",
    "uuid": "^8.3.2",
    "yaml": "^2.1.3"
  },
  "description": "The brain of the Otomi Container Platform. Handling console input and talking to core, it knows what to do.",
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@commitlint/config-conventional": "19.7.1",
    "@hkdobrev/run-if-changed": "0.3.1",
    "@redocly/openapi-cli": "1.0.0-beta.95",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/expect": "^24.3.0",
    "@types/express": "4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.14",
    "@types/lodash": "4.14.182",
    "@types/lowdb": "1.0.11",
    "@types/node": "^16.18.125",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "commitizen": "4.3.1",
    "copyfiles": "2.4.1",
    "cspell": "5.21.2",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.0.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "git-branch-is": "4.0.0",
    "git-cz": "4.9.0",
    "husky": "7.0.4",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "lint-staged": "10.5.4",
    "nock": "13.5.6",
    "nodemon": "2.0.16",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.13.0",
    "openapi-schema-validator": "3.0.3",
    "openapi-typescript": "5.3.0",
    "prettier": "2.6.2",
    "proxyquire": "^2.1.3",
    "semantic-release": "^24.2.3",
    "standard-version": "9.5.0",
    "supertest": "4.0.2",
    "supports-color": "9.2.2",
    "swagger-node-codegen": "1.6.3",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4",
    "watch": "0.19.2"
  },
  "engines": {
    "node": ">=20 <21",
    "npm": "^10"
  },
  "engineStrict": true,
  "homepage": "https://github.com/redkubes/otomi-api#readme",
  "license": "ISC",
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "main": "dist/src/app.js",
  "name": "@redkubes/otomi-api",
  "publishConfig": {
    "private": true,
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redkubes/otomi-api.git"
  },
  "run-if-changed": {
    "package-lock.json": "npm install --prefer-offline --no-audit",
    "src/openapi/**/*": "npm run build:models"
  },
  "scripts": {
    "build": "npm run clean && npm run build:models && tsc && tsc-alias --dir dist -v && copyup --error src/generated-schema.json src/values-schema.yaml src/ttyManifests/*.yaml src/ttyManifests/adminTtyManifests/*.yaml dist/src && copyup --error ./src/license/license.pem ./dist/src",
    "build:models": "npm run build:spec && openapi-typescript src/generated-schema.json -o src/generated-schema.ts",
    "build:spec": "ts-node-dev -r tsconfig-paths/register src/build-spec.ts",
    "clean": "rm -rf dist >/dev/null",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "dev": "run-p watch dev:node",
    "dev:node": "ts-node-dev --watch 'test/apps.yaml,test/core.yaml,src/openapi/**/*.yaml,src/generated-schema.ts,.env' -r tsconfig-paths/register -r dotenv/config --inspect=4321 --respawn --transpile-only src/app.ts",
    "lint": "run-p types lint:ts",
    "lint:ts": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix .",
    "lint-staged": "lint-staged",
    "postinstall": "npm run build:models",
    "pre-release:client": "npm version prerelease --preid rc --no-commit-hooks --no-git-tag-version && bin/release-client.sh",
    "release": "standard-version",
    "release:bump:minor": "standard-version --skip.changelog true --release-as minor",
    "release:client": "bin/release-client.sh",
    "run-if-changed": "run-if-changed",
    "start": "node dist/src/app.js",
    "test": "npm run build:models && jest --forceExit",
    "test:pattern": "npm run build:models && jest --forceExit",
    "types": "tsc --noEmit",
    "prepare": "husky install",
    "watch": "npm-watch",
    "license:sign": "ts-node-dev -r tsconfig-paths/register src/license.ts"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "version": "3.6.0",
  "watch": {
    "build:models": {
      "patterns": [
        "src/openapi"
      ],
      "extensions": "yaml",
      "runOnChangeOnly": true
    }
  }
}
